<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jacobconner.artifacttracker">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ArtifactTracker"
        tools:targetApi="31">
        <activity
            android:name=".graph_view"
            android:exported="false" />
        <activity
            android:name=".settings"
            android:exported="false" />
        <activity
            android:name=".ViewArtifactsView"
            android:exported="false" />
        <activity
            android:name=".AddUnitForm"
            android:exported="false"
            android:label="@string/title_activity_add_unit_form"
            android:theme="@style/Theme.ArtifactTracker.NoActionBar" />
        <activity
            android:name=".AddSiteForm"
            android:exported="false"
            android:label="@string/title_activity_add_site_form"
            android:theme="@style/Theme.ArtifactTracker.NoActionBar" />
        <activity
            android:name=".AddArtifactForm"
            android:exported="false"
            android:label="@string/title_activity_add_artifact_form"
            android:theme="@style/Theme.ArtifactTracker.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>